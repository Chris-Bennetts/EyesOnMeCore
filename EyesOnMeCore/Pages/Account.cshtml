@page
@model EyesOnMeCore.Pages.AccountModel
@{
}
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Account Settings</title>
    <style>
        body {
            background-color: #1e1e1e;
            color: #fff;
            font-family: Arial, sans-serif;
            font-size: 16px;
            line-height: 1.5;
        }

        h1 {
            font-size: 2rem;
            text-align: center;
            margin-top: 1rem;
        }

        .container {
            width: 90%;
            max-width: 500px;
            margin: 2rem auto;
            padding: 2rem;
            background-color: #2b2b2b;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
        }

        label {
            display: block;
            margin-bottom: 0.5rem;
            font-size: 1.2rem;
            font-weight: bold;
        }

        input[type="text"],
        input[type="password"] {
            width: 100%;
            padding: 0.5rem;
            margin-bottom: 1rem;
            font-size: 1.2rem;
            border-radius: 5px;
            border: none;
            background-color: #3c3c3c;
            color: #fff;
        }

        input[type="submit"] {
            display: block;
            width: 100%;
            padding: 1rem;
            margin-top: 1rem;
            border-radius: 5px;
            border: none;
            background-color: #0078d4;
            color: #fff;
            font-size: 1.2rem;
            cursor: pointer;
        }

            input[type="submit"]:hover {
                background-color: #005a9e;
            }
    </style>
</head>
<body>
    <div class="container">
        <h1>Account Settings</h1>
        <form action="" method="post">
            <div class="form-section">
                <h2>Profile Information</h2>
                <label for="name">Name:</label>
                <input type="text" id="name" name="name" required />
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" required />
            </div>
            <div class="form-section">
                <h2>Password</h2>
                <label for="current-password">Current Password:</label>
                <input type="password" id="current-password" name="current-password" required />
                <label for="new-password">New Password:</label>
                <input type="password" id="new-password" name="new-password" required />
                <label for="confirm-password">Confirm Password:</label>
                <input type="password" id="confirm-password" name="confirm-password" required />
            </div>
            <div class="form-section">
                <h2>Privacy</h2>
                <label for="allow-emails">Allow Emails:</label>
                <input type="checkbox" id="allow-emails" name="allow-emails" />
                <p>
                    We occasionally send newsletters, account updates, and promotional
                    emails. You can unsubscribe at any time.
                </p>
            </div>
            <input type="submit" value="Save Changes" />
        </form>
    </div>
</body>